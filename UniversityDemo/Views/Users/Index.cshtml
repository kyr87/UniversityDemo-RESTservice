@model IEnumerable<UniversityDemo.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-primary" })
</p>

<div class="container">
    <div class="row">


        @using (Html.BeginForm("Index", "Users", FormMethod.Get))
        {
            <p>
                @Html.TextBox("searching")
                <button class="btn-info" type="submit">Search</button>
            </p>

        }

    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRole)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRole)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Details", "Details", new { id = item.UserId }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { onclick = $"return confirm('{item.UserName} will be deleted. Are you sure ?');", @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
